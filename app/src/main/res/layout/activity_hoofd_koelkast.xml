<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hoofd_koelkast">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="0dp"
        android:layout_height="95dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" >

        <ImageButton
            android:id="@+id/imageButtonKoelkastje"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:contentDescription="imageButtonKoelkastje"
            android:cropToPadding="false"
            android:scaleX="2.5"
            android:scaleY="2.5"
            app:srcCompat="@drawable/ic_action_koelkastje"
            tools:srcCompat="@drawable/ic_action_koelkastje" />

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <TextView
        android:id="@+id/a_koelkastview_titel"
        android:layout_width="262dp"
        android:layout_height="105dp"
        android:layout_marginTop="42dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/a_koelkastview_titel"
        android:textAlignment="center"
        android:textColor="@color/darkturqoise"
        android:textSize="40sp"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonReceptjes"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:adjustViewBounds="true"
        android:scaleX="2.5"
        android:scaleY="2.5"
        app:srcCompat="@drawable/ic_action_receptjes"
        tools:layout_editor_absoluteX="317dp"
        tools:layout_editor_absoluteY="550dp" />


</androidx.constraintlayout.widget.ConstraintLayout>